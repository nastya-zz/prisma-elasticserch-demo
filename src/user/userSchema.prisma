
model User {
  id                    Int                    @id @default(autoincrement())
  email                 String                 @unique
  name                  String
  posts                 Post[]
  password              String
//  address               Address?
  createdAt             DateTime               @default(now())
  updatedAt             DateTime               @default(now()) @updatedAt
  isActive              Boolean                @default(true)
  advertisements        Advertisement[]
  chats                 Chat[]
  Message               Message[]

  @@unique([email, id])
  @@map("user")
}
