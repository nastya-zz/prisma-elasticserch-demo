
model User {
    id              Int       @default(autoincrement()) @id
    email         String      @unique
    name          String
    posts         Post[]
    password      String

    /// @DtoCreateOptional
    /// @DtoRelationCanConnectOnCreate
    address       Address?

    @@map("user")
    @@unique([email, id])
}

model Address {
    id              Int         @default(autoincrement()) @id
    show            Boolean     @default(false)
    address         String
    user            User        @relation(fields: [userId], references: [id])
    userId          Int         @unique

    /// @DtoCreateOptional
    coordinateX     String?
    coordinateY     String?

    @@map("address")
    @@unique([id, userId])
}